#!/usr/local/cpanel/3rdparty/bin/perl

package Nemanja::Chattr;

use strict;

use parent qw( Cpanel::AdminBin::Script::Call );

use Cpanel::Logger          ();
use Cpanel::Sys::Chattr     ();
use File::Find              ();

my @content;

__PACKAGE__->run() if !caller;

sub _actions {
    return qw(
        ENABLE
        DISABLE
        GET
        ENABLE_RECURSE
        DISABLE_RECURSE
        );
    }

sub ENABLE {
    my ($self, $path) = @_;
    my $val;
    my $fh;
    
    open($fh, $path);
    $val = Cpanel::Sys::Chattr::set_attribute($fh, 'IMMUTABLE');

    return "I did good with $path";
    
}

sub DISABLE {
    my ($self, $path) = @_;
    my $val;
    my $fh;


    open($fh, $path);
    $val = Cpanel::Sys::Chattr::remove_attribute($fh, 'IMMUTABLE');

    return "I did good and removed shit with $path";
}

sub GET {
    my ($self, $path) = @_;
    my $val;
    my $fh;

    open($fh, $path);
    $val = Cpanel::Sys::Chattr::get_attribute($fh, 'IMMUTABLE');

    return $val;
}

sub ENABLE_RECURSE {
    my ($self, $path) = @_;
    my $fh;
    my $val;

    File::Find::find( \&wanted, $path );

    foreach(@content) {

        open($fh, $_);
        $val = Cpanel::Sys::Chattr::set_attribute($fh, 'IMMUTABLE');
    }

    
    return "I did shit and ENABLED ALL files in $path";
}

sub DISABLE_RECURSE {
    my ( $self, $path ) = @_;
    my $fh;
    my $val;

    File::Find::find( \&wanted, $path );

    foreach(@content) {
        
        open($fh, $_);
        $val = Cpanel::Sys::Chattr::remove_attribute($fh, 'IMMUTABLE');
    }

    return "I did shit and DISABLED ALL files in $path";
}

sub wanted {
    push @content, $File::Find::name;
    return;
}
1;
